{
	"version": "1.0.0",
	"workspace": "Chalet Example - SDL2",
	"externalDependencies": {
		"sdl2": {
			"repository": "git@github.com:libsdl-org/SDL.git",
			"tag": "release-2.0.20"
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"runtimeTypeInformation": false,
			"staticRuntimeLibrary": false,
			"warnings": "strict",
			"treatWarningsAsErrors": true,
			"defines.debug": [
				"_DEBUG"
			],
			"includeDirs": [
				"${externalDir}/sdl2/include"
			],
			"libDirs": [
				"${externalBuildDir}/sdl2"
			],
			"links.!debug": [
				"SDL2"
			],
			"links.debug": [
				"SDL2d"
			],
			"links.macos": [
				"iconv"
			],
			"links.linux": [
				"dl"
			],
			"macosFrameworks": [
				"CoreFoundation",
				"CoreAudio",
				"CoreVideo",
				"CoreHaptics",
				"AppKit",
				"IOKit",
				"Carbon",
				"Metal",
				"AudioToolbox",
				"GameController",
				"ForceFeedback"
			]
		}
	},
	"targets": {
		"sdl2": {
			"kind": "cmakeProject",
			"location": "${externalDir}/sdl2",
			"recheck": false,
			"rebuild": false,
			"defines.linux": [
				"SDL_SHARED=OFF",
				"SDL_STATIC=ON",
				"CMAKE_C_FLAGS=-fPIC"
			],
			"defines.windows": [
				"SDL_SHARED=ON",
				"SDL_STATIC=OFF"
			]
		},
		"sdl2-app": {
			"kind": "executable",
			"settings:Cxx": {
				"precompiledHeader": "src/PCH.hpp",
				"includeDirs": [
					"src"
				],
				"windowsSubSystem.!debug": "windows"
			},
			"files": "src/**.cpp"
		}
	},
	"distribution": {
		"SDL2App": {
			"kind": "bundle",
			"buildTargets": [
				"sdl2-app"
			]
		}
	}
}
