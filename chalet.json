{
	"version": "1.0.0",
	"name": "chalet-example-sdl",
	"externalDependencies": {
		"sdl": {
			"kind": "git",
			"repository": "git@github.com:libsdl-org/SDL.git",
			"tag": "release-2.30.2"
		}
	},
	"package": {
		"sdl-static": {
			"settings:Cxx": {
				"includeDirs": "${external:sdl}/include",
				"libDirs": "${externalBuild:sdl}",
				"links[:web]": "SDL2",
				"links[:windows+:!debug]": "SDL2-static",
				"links[:windows+:debug]": "SDL2-staticd",
				"links[:macos+:!debug]": "SDL2",
				"links[:macos+:debug]": "SDL2d",
				"links[:linux+:!debug]": "SDL2",
				"links[:linux+:debug]": "SDL2d",
				"links[:windows]": [
					"winmm",
					"setupapi",
					"version",
					"imm32",
					"dwmapi"
				],
				"links[:macos]": "iconv",
				"links[:linux]": "dl",
				"appleFrameworks": [
					"CoreFoundation",
					"CoreAudio",
					"CoreVideo",
					"CoreHaptics",
					"AppKit",
					"IOKit",
					"Carbon",
					"Metal",
					"AudioToolbox",
					"GameController",
					"ForceFeedback"
				]
			}
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"runtimeTypeInformation": false,
			"staticRuntimeLibrary": false,
			"warningsPreset": "strict",
			"treatWarningsAsErrors": true,
			"defines[:debug]": [
				"_DEBUG"
			]
		}
	},
	"targets": {
		"sdl": {
			"kind": "cmakeProject",
			"location": "${external:sdl}",
			"recheck": false,
			"rebuild": false,
			"defines": [
				"SDL_STATIC_PIC=ON",
				"SDL_WERROR=ON",
				"SDL_SHARED=OFF",
				"SDL_STATIC=ON",
				"SDL_TESTS=OFF",
				"SDL_INSTALL_TESTS=OFF",
				"SDL_CLANG_TIDY=OFF",
				"SDL_VENDOR_INFO='Built with Chalet'",
				"SDL_DISABLE_INSTALL=ON",
				"SDL_DISABLE_INSTALL_CPACK=ON",
				"SDL_DISABLE_INSTALL_DOCS=ON"
			]
		},
		"sdl-app": {
			"kind": "executable",
			"settings:Cxx": {
				"precompiledHeader": "src/PCH.hpp",
				"includeDirs": [
					"src"
				],
				"windowsSubSystem[:!debug]": "windows",
				"windowsApplicationIcon": "platform/windows/app.ico",
				"windowsApplicationManifest": "platform/windows/app.manifest"
			},
			"files": "src/**.cpp",
			"importPackages": [
				"sdl-static"
			]
		}
	},
	"distribution": {
		"SDLApp": {
			"kind": "bundle",
			"buildTargets": "*",
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"entitlementsPropertyList": "platform/macos/Entitlements.plist.json",
				"icon": "platform/sdl-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/sdl-logo.png"
			}
		},
		"SDLApp.dmg": {
			"kind": "macosDiskImage",
			"pathbarVisible": false,
			"textSize": 12,
			"iconSize": 80,
			"background": {
				"1x": "platform/macos/dmg-background.png",
				"2x": "platform/macos/dmg-background@2x.png"
			},
			"size": {
				"width": 512,
				"height": 342
			},
			"positions": {
				"SDLApp": {
					"x": 120,
					"y": 188
				},
				"Applications": {
					"x": 392,
					"y": 188
				}
			}
		}
	}
}
