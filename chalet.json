{
	"version": "1.0.0",
	"name": "Chalet Example - SDL",
	"externalDependencies": {
		"sdl": {
			"kind": "git",
			"repository": "git@github.com:libsdl-org/SDL.git",
			"tag": "release-2.26.0"
		}
	},
	"abstracts:*": {
		"language": "C++",
		"settings:Cxx": {
			"cppStandard": "c++20",
			"runtimeTypeInformation": false,
			"staticRuntimeLibrary": false,
			"warningsPreset": "strict",
			"treatWarningsAsErrors": true,
			"defines[:debug]": [
				"_DEBUG"
			],
			"includeDirs": [
				"${external:sdl}/include"
			],
			"libDirs": [
				"${externalBuild:sdl}"
			],
			"links[:!debug]": [
				"SDL2"
			],
			"links[:debug]": [
				"SDL2d"
			],
			"links[:macos]": [
				"iconv"
			],
			"links[:linux]": [
				"dl"
			],
			"links[:windows]": [
				"dwmapi"
			],
			"macosFrameworks": [
				"CoreFoundation",
				"CoreAudio",
				"CoreVideo",
				"CoreHaptics",
				"AppKit",
				"IOKit",
				"Carbon",
				"Metal",
				"AudioToolbox",
				"GameController",
				"ForceFeedback"
			]
		}
	},
	"targets": {
		"sdl": {
			"kind": "cmakeProject",
			"location": "${external:sdl}",
			"recheck": false,
			"rebuild": false,
			"defines[:linux]": [
				"SDL_SHARED=OFF",
				"SDL_STATIC=ON",
				"CMAKE_C_FLAGS=-fPIC"
			],
			"defines[:windows]": [
				"SDL_SHARED=ON",
				"SDL_STATIC=OFF"
			]
		},
		"sdl-app": {
			"kind": "executable",
			"settings:Cxx": {
				"precompiledHeader": "src/PCH.hpp",
				"includeDirs": [
					"src"
				],
				"windowsSubSystem[:!debug]": "windows",
				"windowsApplicationIcon": "platform/windows/app.ico",
				"windowsApplicationManifest": "platform/windows/app.manifest"
			},
			"files": "src/**.cpp"
		}
	},
	"distribution": {
		"SDLApp": {
			"kind": "bundle",
			"buildTargets": "*",
			"macosBundle": {
				"type": "app",
				"infoPropertyList": "platform/macos/Info.plist.json",
				"entitlementsPropertyList": "platform/macos/Entitlements.plist.json",
				"icon": "platform/sdl-logo.png"
			},
			"linuxDesktopEntry": {
				"template": "platform/linux/app.desktop",
				"icon": "platform/sdl-logo.png"
			}
		},
		"SDLApp.dmg": {
			"kind": "macosDiskImage",
			"pathbarVisible": false,
			"textSize": 12,
			"iconSize": 80,
			"background": {
				"1x": "platform/macos/dmg-background.png",
				"2x": "platform/macos/dmg-background@2x.png"
			},
			"size": {
				"width": 512,
				"height": 342
			},
			"positions": {
				"SDLApp": {
					"x": 120,
					"y": 188
				},
				"Applications": {
					"x": 392,
					"y": 188
				}
			}
		}
	}
}